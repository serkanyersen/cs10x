{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "outDir": "dist",
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
  }
}
